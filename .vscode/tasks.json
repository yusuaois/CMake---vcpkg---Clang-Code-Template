    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake config",
            "type": "shell",
            // "command": "cmake -B build -G Ninja",
            "command": "cmake --preset default"
        },{
            "label": "cmake build",
            "type": "shell",
            // "command": "cmake --build build",
            "command": "cmake --build --preset default"
        },{
            "label": "cmake clean",
            "type": "shell",
            // "command": "cmake --build build",
            "command": "cmake --build build/default --target clean"
        },
    ]
}